# Record template for DT320 temperature controller
#ai record template for register inputs
record(waveform, "$(P):TT$(ADR):sWf-7") {
    field(DESC,"Data from pport DT320_7")
    field(DTYP,"asynInt32ArrayIn")
    field(NELM,"8")
    field(FTVL,"LONG")
    field(INP,"@asyn($(PORT),0,1000)INT16")
    field(SCAN,"$(SCAN)")
}

record(bi, "$(P):TT$(ADR)-Prg:sRunning") {
    field(DESC,"Program running")
    field(DTYP,"asynInt32")
    field(INP,"@asyn($(PORT),3,1000)MODBUS_DATA")
    field(SCAN,"$(SCAN)")
    field(ZNAM, "Off")
    field(ONAM, "On")
#    field(MASK, "0x40")
}

